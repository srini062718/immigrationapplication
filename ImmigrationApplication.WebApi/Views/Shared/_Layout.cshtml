<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-inverse .navbar-nav > li > a {
    color: #fff;
            font-size: medium;
}

    .navbar-inverse .navbar-brand {
           color: #fff;
}
    .navbar-brand img {
           height: 65px;
           margin-bottom: 20px;
           width: 200px;
        Padding-top: 0px;
        padding-bottom: inherit;
}
    .navbar {
           min-height:67px;
        }
        </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #f1a96e">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">Address</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              @*  @Html.ActionLink("<img src=", "Index", "Person", new { area = "" }, new { @class = "navbar-brand" }) *@
                <a class="navbar-brand" href="/Person/Index"><img src="../../Images/sunshine_logo.png" alt="Sunshine Consulting LLC" /></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Person")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sunshine Consulting LLC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
