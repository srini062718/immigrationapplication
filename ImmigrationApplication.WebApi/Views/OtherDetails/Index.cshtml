@model IEnumerable<ImmigrationApplication.Model.OtherDetail>
@Html.Partial("~/Views/Shared/_navbar.cshtml", new ViewDataDictionary { { "PersonID", Model.FirstOrDefault().PersonID } })
<p>
    @Html.ActionLink("Create New", "Create", new { personId = Model.FirstOrDefault().PersonID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AboutFirm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LicenseNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguagesSpoken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conviction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherInformation)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AboutFirm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LicenseNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguagesSpoken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conviction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherInformation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PersonID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PersonID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PersonID })
        </td>
    </tr>
}

</table>
